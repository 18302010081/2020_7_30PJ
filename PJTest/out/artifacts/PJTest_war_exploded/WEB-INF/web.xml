<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>./index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/Frontend/404.html</location>
    </error-page>


    
    <servlet>
        <description>Login function</description>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Frontend/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Register function</description>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Frontend/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Upload function</description>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>Servlets.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/Frontend/UploadServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Quit Register function</description>
        <servlet-name>QuitServlet</servlet-name>
        <servlet-class>Servlets.QuitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuitServlet</servlet-name>
        <url-pattern>/Frontend/QuitServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Search function</description>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>Servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/Frontend/SearchServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddToMyCollectionServlet</servlet-name>
        <servlet-class>Servlets.AddToMyCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToMyCollectionServlet</servlet-name>
        <url-pattern>/Frontend/AddToMyCollectionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveFromMyCollectionServlet</servlet-name>
        <servlet-class>Servlets.RemoveFromMyCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromMyCollectionServlet</servlet-name>
        <url-pattern>/Frontend/RemoveFromMyCollectionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveMyCollectionServlet</servlet-name>
        <servlet-class>Servlets.RemoveMyCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveMyCollectionServlet</servlet-name>
        <url-pattern>/Frontend/RemoveMyCollectionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FriendRequestServlet</servlet-name>
        <servlet-class>Servlets.FriendRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FriendRequestServlet</servlet-name>
        <url-pattern>/Frontend/FriendRequestServlet</url-pattern>
    </servlet-mapping>
    

</web-app>